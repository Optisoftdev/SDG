<?xml version='1.0' encoding='utf-8'?>
<widget id="ng.optisoft.hydroagro" version="2.3" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <name>Hydro-Agro Data</name>
    <description>
        SDG 1,2,6 &amp; 12 Support App.
    </description>
    <author email="optisoft.ng@gmail.com" href="http://optisoft.ng">
        ng.optisoft
    </author>
    <content src="index.html" />
    <icon src="res/icon.png" />
    <splash src="res/splash.png" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="market:*" />
    <allow-navigation href="*" />
    <allow-intent href="*" />
    <access origin="*" />
    <preference name="loglevel" value="DEBUG" />
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="SplashScreenDelay" value="5000" />
</widget>
